<Window x:Class="TaskOrganizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="514" Width="873" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    
    <Grid x:Name="gridTasks">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition Height="0.55*"></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="2.5*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

         <!-- HEADERS -->
        <Label Name="lblTasks" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="10 0 0 0"
                FontSize="20" FontWeight="SemiBold" BorderBrush="Black">My Task Organizer</Label>
        <Label Name="lblTaskList" Grid.Row="1" Grid.Column="0" Margin="5 5 5 5"
                   FontSize="16" FontWeight="Light" BorderBrush="Black" BorderThickness="0 0 0 0.25">List</Label>
        <Label Name="lblTaskDetail" Grid.Row="1" Grid.Column="1" Margin="5 5 5 5"
                   FontSize="16" FontWeight="Light" BorderBrush="Black" BorderThickness="0 0 0 0.25">Detail</Label>
        
        <!-- TASK LIST -->
        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Vertical">
            <TreeView Name="treeTasks" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Top"
                      FontSize="14" BorderThickness="0" Margin="5">
                <TreeViewItem Name="parDueDate1" Header="Monday May 20, 2013">
                    <TreeViewItem Name="ndeTask1" Header="My Big Project"></TreeViewItem>
                </TreeViewItem>
                <TreeViewItem Name="parDueDate2" Header="Wednesday May 29, 2013">
                    <TreeViewItem Name="ndeTas2" Header="My Big Project"></TreeViewItem>
                </TreeViewItem>
                <TreeViewItem Name="parDueDate3" Header="Monday May 20, 2013">
                    <TreeViewItem Name="ndeTask3" Header="My Big Project"></TreeViewItem>
                </TreeViewItem>
                <TreeViewItem Name="parDueDate4" Header="Wednesday May 29, 2013">
                    <TreeViewItem Name="ndeTas4" Header="My Big Project"></TreeViewItem>
                </TreeViewItem>
                <TreeViewItem Name="parDueDate5" Header="Monday May 20, 2013">
                    <TreeViewItem Name="ndeTask5" Header="My Big Project"></TreeViewItem>
                </TreeViewItem>
                <TreeViewItem Name="parDueDate6" Header="Wednesday May 29, 2013">
                    <TreeViewItem Name="ndeTas6" Header="My Big Project"></TreeViewItem>
                </TreeViewItem>
            </TreeView>
            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="btnRemove" Margin="5" FontSize="12">Remove</Button>
                <Button Name="btnEdit" Margin="5" FontSize="12">Edit</Button>
                <Button Name="btnAdd" Margin="5" FontSize="12">New</Button>
            </WrapPanel>
        </StackPanel>
        
        <!-- TASK DETAIL -->
        <Grid Name="gridTaskDetail" Grid.Row="2"  Grid.Column="1" Margin="15 5 15 5">
            <Grid.RowDefinitions>
                <RowDefinition Style="{StaticResource FormGrid}"></RowDefinition>
                <RowDefinition Style="{StaticResource FormGrid}"></RowDefinition>
                <RowDefinition Style="{StaticResource FormGrid}"></RowDefinition>
                <RowDefinition Style="{StaticResource FormGrid}"></RowDefinition>
                <RowDefinition Style="{StaticResource FormGrid}"></RowDefinition>
                <RowDefinition Style="{StaticResource FormGrid}"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.0*"></ColumnDefinition>
                <ColumnDefinition Width="2.5*"></ColumnDefinition>
                <ColumnDefinition Width="2.5*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            
            <!-- TASK FORM -->
            <Label Name="lblForName" Grid.Row="0" Grid.Column="0" Style="{StaticResource ForLabel}">Name:</Label>
            <TextBox Name="txtName" Grid.Row="0" Grid.Column="1" Style="{StaticResource TextInput}"></TextBox>
            
            <Label Name="lblForDesc" Grid.Row="1" Grid.Column="0" Style="{StaticResource ForLabel}">Description:</Label>
            <TextBox Name="txtDesc" Grid.Row="1" Grid.Column="1" Style="{StaticResource TextInput}"></TextBox>
            
            <Label Name="lblForStarted" Grid.Row="2" Grid.Column="0" Style="{StaticResource ForLabel}">Date Started:</Label>
            <DatePicker Name="dateStarted" Grid.Row="2" Grid.Column="1" Style="{StaticResource DateInput}"></DatePicker>
            
            <Label Name="lblForDue" Grid.Row="3" Grid.Column="0" Style="{StaticResource ForLabel}">Date Due:</Label>
            <DatePicker Name="dateDue" Grid.Row="3" Grid.Column="1" Style="{StaticResource DateInput}"></DatePicker>

            <Label Name="lblForStatus" Grid.Row="4" Grid.Column="0" Style="{StaticResource ForLabel}">Status:</Label>
            <ComboBox Name="cmbStatus" Grid.Row="4" Grid.Column="1" Style="{StaticResource ComboInput}"></ComboBox>

            <Label Name="lblForPriority" Grid.Row="5" Grid.Column="0" Style="{StaticResource ForLabel}">Priority:</Label>
            <ComboBox Name="cmbPriority" Grid.Row="5" Grid.Column="1" Style="{StaticResource ComboInput}"></ComboBox>

            <Label Name="lblForDetails" Grid.Row="6" Grid.Column="0" Style="{StaticResource ForLabel}">Details:</Label>
            <RichTextBox Name="rtfDetails" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2" VerticalAlignment="Stretch"></RichTextBox>
            
            <!-- TASK ACTIONS -->
            <!--<StackPanel Name="stkActions" Grid.Row="10" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Name="lblActions" FontSize="12" VerticalAlignment="Center" FontWeight="SemiBold">Actions:</Label>
                <Button Name="btnEdit" Margin="5" FontSize="12">Edit</Button>
                <Button Name="btnDelete" Margin="5" FontSize="12">Delete</Button>
            </StackPanel>-->
        </Grid>
        <GridSplitter Grid.Column="1" HorizontalAlignment="Left" Height="100" Margin="0,21,0,0" Grid.Row="2" VerticalAlignment="Top" Width="5"/>
    </Grid>
</Window>
