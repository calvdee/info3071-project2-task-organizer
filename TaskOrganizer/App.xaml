<Application x:Class="TaskOrganizer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- CONTENT LABEL-->
        <Style x:Key="ContentLabel" TargetType="{x:Type Label}">
            <Setter Property="FontSize" Value="14"></Setter>
            <Setter Property="FontWeight" Value="Light"></Setter>
            <Setter Property="Grid.ColumnSpan" Value="2"></Setter>
        </Style>

        <!-- FOR LABEL -->
        <Style x:Key="ForLabel" TargetType="{x:Type Label}">
            <Setter Property="HorizontalAlignment" Value="Left"></Setter>
            <Setter Property="FontSize" Value="14"></Setter>
        </Style>
        
        <!-- FORM GRID -->
        <Style x:Key="FormGrid" TargetType="{x:Type RowDefinition}">
            <Setter Property="MaxHeight" Value="30"></Setter>
        </Style>
    </Application.Resources>
</Application>
